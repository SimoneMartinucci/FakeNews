<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/news_imageview"
        android:layout_width="@dimen/item_landscape_width"
        android:layout_height="@dimen/item_landscape_height"
        app:srcCompat="@drawable/fakenewslogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/alpha_view"
        android:background="@drawable/bkg_alpha_item_landscape"
        app:layout_constraintTop_toTopOf="@id/news_imageview"
        app:layout_constraintStart_toStartOf="@id/news_imageview"
        app:layout_constraintEnd_toEndOf="@id/news_imageview"
        app:layout_constraintBottom_toBottomOf="@id/news_imageview"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/news_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_landscape_title_margin"
        tools:text="Gennaro Savastano Sindaco di Pomezia"
        app:layout_constraintStart_toStartOf="@id/news_imageview"
        app:layout_constraintBottom_toBottomOf="@id/news_imageview"/>

</androidx.constraintlayout.widget.ConstraintLayout>